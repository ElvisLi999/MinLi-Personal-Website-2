<div class="row justify-content-lg-center g-3">
    <h1 class="text-center"><%= title %> Contact </h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Name</span>
            <input id="name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="Contact Name"
            name="name" value="<%= contacts.name %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">contactnumber</span>
            <input id="contactnumber" type="text" class="form-control" placeholder="Contact Number" aria-label="contactnumber" aria-describedby="Contact Number"
            name="contactnumber" value="<%= contacts.contactnumber %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">email</span>
            <input id="email" type="text" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="Email"
            name="email" value="<%= contacts.email %>" required>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-success" id="updateButton"><i class="fas fa-edit fa-lg"></i> Update</button>
        <a href="/contacts-list" id="cancelButton" class="btn btn-info "><i class="fas fa-undo-alt"></i> Cancel</a>
        <a href="/contacts-list/delete/<%= contacts._id %>" id="cancelButton" class="btn btn-danger delete"><i class="far fa-trash-alt"></i> Delete</a>
        </div>

    </form>
</div>