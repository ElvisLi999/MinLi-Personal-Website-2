<div class="row justify-content-lg-center g-3">
    <h1><%= title %> Game </h1>

    <form method="POST" class="col-lg-6 col-md-10 col-sm-10">
        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Name</span>
            <input id="name" type="text" class="form-control" placeholder="Name" aria-label="Name" aria-describedby="Game Name"
            name="name" value="<%= games.name %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Genre</span>
            <input id="genre" type="text" class="form-control" placeholder="Genre" aria-label="Genre" aria-describedby="Game Genre"
            name="genre" value="<%= games.genre %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Developer</span>
            <input id="developer" type="text" class="form-control" placeholder="Developer" aria-label="Developer" aria-describedby="Game Developer"
            name="developer" value="<%= games.developer %>" required>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="name">Cost</span>
            <input id="cost" type="text" class="form-control" placeholder="Cost" aria-label="Cost" aria-describedby="Game Cost"
            name="cost" value="<%= games.cost %>" required>
        </div>

        <button type="submit" class="btn btn-primary" id="editButton"><i class="fas fa-edit fa-lg"></i> Edit</button>

    </form>
</div>